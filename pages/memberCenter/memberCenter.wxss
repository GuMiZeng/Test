/* pages/member/member.wxss */
@import '/template/goodsList.wxss';

.member-center-banner {
  position: relative;
  overflow: hidden;
  font-size: 0;
}

.member-canter-banner-active {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.member-center-banner-info {
  display: flex;
  flex-direction: column;
  padding: 94rpx 68rpx 32rpx;
}

.member-center-banner-info-renew {
  margin-left: auto;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #eeddb7;
  font-size: 28rpx;
  background-color: #000;
  border-radius: 25rpx;
}

.member-center-banner-info-date {
  margin-top: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

.member-center-banner-info-save {
  margin-top: 120rpx;
  color: #333;
  font-size: 24rpx;
}

.member-center-banner-info-save-num {
  margin: 0 14rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.member-center-banner-info-save-text {
  vertical-align: middle;
  font-size: 24rpx;
}

.member-center-banner-info-save-text.number {
  margin: 0 14rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.member-center-banner-info-save-text.arrow {
  margin: 0 14rpx;
}

.member-center-banner-info-save-more {
  margin-left: 22rpx;
  font-size: 30rpx;
}

.member-center-banner-default {
  width: 750rpx;
  height: 310rpx;
}

.member-center-banner-button {
  margin: 50rpx auto 39rpx;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  background-color: #eeddb7;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 2rpx;
}

.member-center-banner-button--bold {
  font-weight: bold;
}
/* 专属权益 */

.member-center-privilege {
  display: flex;
  align-items: center;
  margin: 11rpx 0 0 20rpx;
  padding-left: 27rpx;
  height: 220rpx;
  background-color: #353431;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}

.member-center-privilege-title {
  margin-right: 24rpx;
  width: 27rpx;
  font-size: 28rpx;
  color: #999;
}

.member-center-privilege-division {
  display: inline-block;
  position: relative;
  z-index: 555;
  width: 16rpx;
  height: 180rpx;
}

.member-center-privilege-list {
  width: 800rpx;
  height: 220rpx;
  padding-right: 70rpx;
  white-space: nowrap;
  justify-content: space-around;
  align-items: center;
  display: flex;
}

.member-center-privilege-list-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #ccc;
  text-align: center;
}

.member-center-privilege-list-item-icon {
  width: 89rpx;
  height: 89rpx;
  border-radius: 50%;
  text-align: center;
  border: 1rpx solid transparent;
}

.member-center-privilege-list-item-icon--active {
  border: 1rpx solid #eeddb7;
}

.member-center-privilege-list-item-icon image {
  margin-top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
}

.member-center-privilege-list-item-name {
  line-height: 53rpx;
  letter-spacing: 1px;
}

.member-center-privilege-list-item-arrow {
  position: absolute;
  bottom: -42rpx;
  border: 20rpx solid transparent;
  border-bottom: 35rpx solid #fcf8f3;
}

.member-center-privilege-isActive {
  margin: 0 0 20rpx 20rpx;
  box-sizing: border-box;
  width: 710rpx;
  min-height: 220rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #fcf8f3, #faf4e8);
  box-shadow: 0px 2rpx 15rpx 0rpx rgba(0, 0, 0, 0.2);
}

.member-center-privilege-isActive-title {
  color: #343434;
  font-size: 30rpx;
  font-weight: bold;
}

.member-center-privilege-isActive-line {
  margin: 15rpx 0;
  width: 25rpx;
  height: 5rpx;
  background: #eeddb7;
  border-radius: 3rpx;
}

.member-center-privilege-isActive-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.member-center-privilege-isActive-content-text {
  width: 472rpx;
  line-height: 36rpx;
  color: #666;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

.member-center-privilege-isActive-content-icon {
  width: 56rpx;
  height: 56rpx;
}

/* 专享模块 */

.member-center-vip {
  display: flex;
  margin: 0 20rpx;
  justify-content: space-between;
}

.member-center-vip-item {
  position: relative;
  height: 130rpx;
  line-height: 1.2;
  border: 1rpx solid #eeddb7;
  border-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background-color: #fefdfb;
  text-align: center;
  color: #333;
}

.member-center-vip-item--three {
  width: 220rpx;
}

.member-center-vip-item--two {
  width: 350rpx;
}

.member-center-vip-item--one {
  width: 710rpx;
}

.menmber-center-vip-item-text {
  position: relative;
  display: inline-block;
  margin-top: 36rpx;
  z-index: 2;
}

.menmber-center-vip-item-text--one {
  padding: 15rpx 54rpx;
  background-color: #eeddb9;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.menmber-center-vip-item-text--two {
  padding: 2rpx 27rpx;
  background-color: #eeddb9;
  border-radius: 10rpx;
}

.menmber-center-vip-item-text--normal {
  display: block;
  font-size: 28rpx;
  text-align: justify;
  text-align-last: justify;
}

.menmber-center-vip-item-text--large {
  font-size: 30rpx;
}

.member-center-vip-item-tag {
  position: absolute;
  left: 0;
  top: 0;
  width: 52rpx;
  height: 30rpx;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color: #eeddb7;
  font-size: 22rpx;
  background-color: #353431;
}

.member-center-vip-item-bg {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 76rpx;
  height: 76rpx;
}

.member-center-super {
  padding-bottom: 52rpx;
}

.member-center-super-goods {
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
}

.member-center-super-title {
  width: 750rpx;
  height: 100rpx;
}

.member-center-super-more {
  padding: 25rpx 0 42rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #e0e0e0;
}
